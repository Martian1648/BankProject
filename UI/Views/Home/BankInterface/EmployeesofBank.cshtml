@model IEnumerable<UI.DataService.Employee>

<h4 class="d-inline-flex position-relative translate-middle-x start-50">Employees</h4>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Job)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.First_Name) @Html.DisplayFor(modelItem => item.Last_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Job)
            </td>

            <td>
                @Html.ActionLink("...", "GetOneEmployee", "Maintenance", new { id = item.Id }, new { @role = "button", @class = "btn btn-outline-secondary" })
            </td>
        </tr>
    }

</table>
