@model IEnumerable<UI.DataService.Customer>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    @for (int i = 0; i < Model.Count(); ++i)
    {
        if (i % 2 == 0)
        {
            <div class="row">
                <div class="col">
                    @Html.ActionLink(Model.ElementAt(i).First_Name + " " + Model.ElementAt(i).Last_Name,
                        "GetCustomerData", new { id = Model.ElementAt(i).Id })
                </div>
                <div class="col">
                    @Html.ActionLink(Model.ElementAt(i +1).First_Name + " " + Model.ElementAt(i+1).Last_Name,
                        "GetCustomerData", new { id = Model.ElementAt(i+1).Id })
                </div>
            </div>
        }
        else
        {
            continue;
        }

    }
</div>
